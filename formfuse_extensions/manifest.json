{
  "manifest_version": 3,
  "name": "FormFuse",
  "version": "0.1.0",
  "description": "Save stable job application details once and autofill matching fields on demand.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://api.openai.com/*"],
  "action": {
    "default_title": "FormFuse",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["core/schema.js", "core/fieldMatcher.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
